@using AbraCmsTask.Models
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePageViewModel>
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2563eb;
            --bg: #f4f4f4;
            --black: #000000;
        }
        body { 
            background-color: var(--bg); 
            font-family: 'Space Grotesk', sans-serif; padding: 60px 20px; color: var(--black);
        }
        .hero { text-align: center; margin-bottom: 60px; }
        .hero h1 { font-size: 4.5rem; margin: 0; text-transform: uppercase; line-height: 0.9; letter-spacing: -2px; }
        .hero p { font-size: 1.2rem; font-weight: 500; margin-top: 15px; }

        .main-layout { max-width: 1000px; margin: 0 auto; }

        .category-nav { display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 40px; }
        .category-link { 
            padding: 12px 24px; border: 3px solid var(--black); font-weight: 700;
            text-decoration: none; color: var(--black); background: white; transition: 0.15s;
            text-transform: uppercase; font-size: 0.9rem;
        }
        .category-link:hover { transform: translate(-4px, -4px); box-shadow: 4px 4px 0px var(--black); }
        .active-cat { background: var(--primary) !important; color: white !important; transform: translate(-4px, -4px); box-shadow: 4px 4px 0px var(--black); }

        .search-box { display: flex; gap: 0; margin-bottom: 60px; border: 3px solid var(--black); box-shadow: 8px 8px 0px var(--black); }
        .search-box input { 
            flex: 1; padding: 20px; border: none; font-size: 1.2rem; font-family: inherit; font-weight: 700; outline: none;
        }
        .search-box button { 
            background: var(--primary); padding: 0 40px; border-left: 3px solid var(--black); 
            color: white; font-weight: 700; cursor: pointer; font-family: inherit; font-size: 1rem;
        }

        .article-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 30px; }
        .article-card { 
            border: 3px solid var(--black); padding: 30px; background: white; 
            box-shadow: 8px 8px 0px var(--black); transition: 0.2s;
            display: flex; flex-direction: column;
        }
        .article-card:hover { transform: translate(-4px, -4px); box-shadow: 12px 12px 0px var(--black); }
        
        .tag { display: inline-block; background: var(--black); color: white; padding: 4px 12px; font-size: 0.75rem; font-weight: 700; margin-bottom: 15px; width: fit-content; }
        .article-card h3 { font-size: 1.8rem; margin: 0 0 15px 0; line-height: 1.1; }
        .article-card p { font-weight: 500; color: #444; flex-grow: 1; }
        
        .read-btn { 
            margin-top: 20px; padding: 10px; border: 2px solid var(--black); 
            text-align: center; text-decoration: none; color: var(--black); font-weight: 700; font-size: 0.9rem;
        }
        .read-btn:hover { background: var(--black); color: white; }
    </style>
</head>
<body>
    <div class="main-layout">
        <header class="hero">
            <h1>@Model.Content.Value("siteTitle")</h1>
            <p>@Model.Content.Value("siteDescription")</p>
        </header>

        <nav class="category-nav">
            <a href="/" class="category-link @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active-cat" : "")">ALL ARCHIVE</a>
            <a href="/?category=Technology" class="category-link @(Model.SelectedCategory == "Technology" ? "active-cat" : "")">TECHNOLOGY</a>
            <a href="/?category=Game Development" class="category-link @(Model.SelectedCategory == "Game Development" ? "active-cat" : "")">GAME DEV</a>
            <a href="/?category=Health" class="category-link @(Model.SelectedCategory == "Health" ? "active-cat" : "")">HEALTH</a>
            <a href="/?category=Sports" class="category-link @(Model.SelectedCategory == "Sports" ? "active-cat" : "")">SPORTS</a>
        </nav>

        <form method="get" class="search-box">
            <input type="text" name="query" value="@Model.Query" placeholder="TYPE TO SEARCH..." />
            <button type="submit">SEARCH</button>
        </form>

        <div class="article-grid">
            @foreach (var item in Model.SearchResults) {
                <div class="article-card">
                    <span class="tag">@item.Value("category")</span>
                    <h3>@item.Name</h3>
                    <p>@{
                        var content = item.Value<string>("articleContent")?.StripHtml().ToString() ?? "";
                        var preview = content.Length > 120 ? content.Substring(0, 120) + "..." : content;
                    }@preview</p>
                    <a href="@item.Url()" class="read-btn">VIEW INSIGHT →</a>
                </div>
            }
        </div>
    </div>
</body>
</html>